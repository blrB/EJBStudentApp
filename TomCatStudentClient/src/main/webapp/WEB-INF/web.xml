<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <context-param>
        <param-name>server-url</param-name>
        <param-value>http://localhost:8080</param-value>
    </context-param>

    <context-param>
        <param-name>rest-student-save</param-name>
        <param-value>/rest/student</param-value>
    </context-param>

    <context-param>
        <param-name>rest-student-get</param-name>
        <param-value>/rest/student/</param-value>
    </context-param>

    <context-param>
        <param-name>rest-student-delete</param-name>
        <param-value>/rest/student/</param-value>
    </context-param>

    <context-param>
        <param-name>rest-students-all</param-name>
        <param-value>/rest/student</param-value>
    </context-param>

    <context-param>
        <param-name>rest-student-group-name</param-name>
        <param-value>/rest/student-group/name/</param-value>
    </context-param>

    <context-param>
        <param-name>rest-students-group-all</param-name>
        <param-value>/rest/student-group</param-value>
    </context-param>

</web-app>